{
  "$schema": "https://example.com/design-tokens.schema.json",
  "color": {
    "accent": {
      "primary": "hsl(330, 85%, 60%)",
      "primary-foreground": "hsl(330, 100%, 98%)"
    },
    "text": { "strong": "hsl(240, 10%, 10%)", "muted": "hsl(240, 5%, 45%)" },
    "surface": { "base": "hsl(0, 0%, 100%)", "subtle": "hsl(0, 0%, 98%)" }
  },
  "radius": { "sm": "0.375rem", "md": "0.75rem", "xl": "1.25rem", "pill": "999px" },
  "spacing": { "xs": "0.25rem", "sm": "0.5rem", "md": "0.75rem", "lg": "1rem", "xl": "1.5rem", "2xl": "2rem" },
  "shadow": { "card": "0 6px 20px rgba(0,0,0,0.06)", "elevated": "0 12px 28px rgba(0,0,0,0.10)" },
  "typography": {
    "display": { "size": "clamp(28px, 6vw, 44px)", "weight": 800, "line": 1.1 },
    "h2": { "size": "clamp(22px, 3.5vw, 28px)", "weight": 700, "line": 1.2 },
    "body": { "size": "16px", "weight": 450, "line": 1.6 }
  }
}
